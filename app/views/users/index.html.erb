<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<% if current_user.role != "user" %>
    <%= link_to "Create new lists", new_list_path %>
<% end %>

<% @lists.each do |list| %>
    <div>
        <%= list.address %>
        <%= list.pickUpDate %>
        distance away from you...
        <%= link_to "Show more", list_path(list)%>
    </div>
<% end %> 

<% if @lists.length === 0 %>
    <p>There are no lists.</p>
<% end %>