<div class="text-center mt-4 container" style="height:80vh;">
<h2>Create An Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="form-row mt-4">
  <div class="field form-group col-md-6">
    <%= f.text_field :username, autofocus: true , placeholder: "Username" , :class => 'form-control'%>
  </div>

  <div class="field form-group col-md-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Email" , :class => 'form-control'%>
  </div>
</div>

  <div class="form-row">
    <div class="field form-group col-md-6">
    <%= f.text_field :address, autofocus: true , placeholder: "Address" , :class => 'form-control'%>
  </div>

  <div class="field form-group col-md-6">
    <%= f.text_field :phone_number, autofocus: true , placeholder: "Phone Number" , :class => 'form-control'%>
  </div>
   </div>

 <div class="form-row">
  <div class="field form-group col-md-6">
    <%= f.password_field :password, autocomplete: "new-password" , placeholder: "Password (6 characters minimum)" , :class => 'form-control'%><br>
  </div>

  <div class="field form-group col-md-6">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "Confirm Password" , :class => 'form-control'%>
  </div>
   </div>

  <div class="field form-group">
    <%= f.label :user_image, "Profile Picture" %><br />
    <%= f.file_field :user_image, :class => 'border form-control-file' %>
   </div>

  <div class="field mt-4 form-group">
    <%= f.radio_button :role, 'user' %>
    <%= label :role_user, 'Collector' %>
    <%= f.radio_button :role, 'recycler', :checked => true %> 
    <%= label :role_recycler, 'Recycler' %>
  </div>

  <div class="actions mt-4 form-group">
    <%= f.submit "Sign up", :class => 'btn btn-success'%>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>