<h1>Types#index</h1>
<p>Find me in app/views/types/index.html.erb</p>

<%= link_to "Add Types", new_type_path %>
<table class="table mt-4">
<tr>
    <td>ID</td>
    <td>Material</td>
    <td>Remarks</td>
    <td>Weight</td>
    <td>Actions</td>
</tr>

<% @types.each do |type| %>
<tr>
    <td><%= link_to type.id, type_path(type.id) %></td>
    <td><%= type.material.split('"')[1] %></td>
    <td><%= type.remarks %></td>
    <td><%= type.weight %>kg</td>
    <td>
        <%= link_to "Edit", edit_type_path(type)%>
        <%= link_to "Delete", type_path(type), method: "delete", data:{ confirm: "Are you sure?"}%>
    </td>
</tr>

<% end %>

</table>